<%- include('parts/html_head') %></body>
<title>Order_Complete</title>

</head>

<body> 
    <%- include('parts/navbar') %>
    <div class="container">

        <table class="table table-bordered table-striped table-hover text-center">
            <thead>
                <tr class="table-primary">
                    <!-- <th scope="col" style="display: none">產品編號</th> -->
                    <th scope="col">訂單編號</th>
                    <th scope="col">商品</th>
                    <th scope="col">數量</th>
                    <th scope="col">單價</th>
                    <th scope="col">小計</th>
                </tr>
            </thead>
            <tbody>
                <%# orderInfo[0].product_name %>
                <% for(let i = orderInfo.length-1; i >= 0; i--){ %>
                <tr class="items">
                    <td><%= orderInfo[i].order_id %></td>
                    <td class="product_name"><%= orderInfo[i].product_name %></td>
                    <td class="product_qty"><%= orderInfo[i].order_quantity %></td>
                    <td><span>$ </span><%= orderInfo[i].order_price %></td>
                    <td><span>$ </span><span
                            class="product_subtotal"><%= orderInfo[i].order_quantity * orderInfo[i].order_price %></span>
                    </td>
                </tr>
                <% } %>
                <tr>
                    <td colspan="3">小計</td>
                    <td colspan="1"><span>$ </span><span id="subtotal"></span></td>
                    <td></td>
                </tr>

            </tbody>
        </table>
        <div id="order_complete_info" class="alert alert-success text-center" role="alert">訂單完成</div>
        <div class="text-right">
            <a class="btn btn-primary" href="/">回首頁</a>
        </div>
    </div>
    <script>
        // 小計計算
        let sum = 0;
        for (let i = 0; i < $('tr.items').length; i++) {
            sum += parseInt($('tr.items').eq(i).find('span.product_subtotal').text())
        }
        $('#subtotal').text(sum);

    </script>
</body>

</html>